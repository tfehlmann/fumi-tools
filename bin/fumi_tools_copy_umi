#!/usr/bin/env python

import sys

umi_len = int(sys.argv[1])

for i, l in enumerate(sys.stdin):
    if i % 4 == 0:
        pos = l.find(' ')
        new_header = "{}_{{}}{}".format(l[:pos], l[pos:])
    elif i %4 == 1:
        sys.stdout.write(new_header.format(l[:umi_len]))
        sys.stdout.write(l)
    else:
        sys.stdout.write(l)
